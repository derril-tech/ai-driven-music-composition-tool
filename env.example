# AriaForge Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=AriaForge
VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/ariaforge
DATABASE_ECHO=false

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI SERVICES
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# STORAGE
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=ariaforge-storage

# =============================================================================
# AUDIO PROCESSING
# =============================================================================
FFMPEG_PATH=ffmpeg
MAX_AUDIO_FILE_SIZE=104857600
SUPPORTED_AUDIO_FORMATS=.wav,.mp3,.flac,.aiff

# =============================================================================
# RENDERING
# =============================================================================
MAX_RENDER_DURATION=600
RENDER_WORKER_COUNT=2

# =============================================================================
# SIMILARITY & RIGHTS
# =============================================================================
SIMILARITY_THRESHOLD=0.85
CONTENT_ID_ENABLED=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# CORS SETTINGS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=*

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=AriaForge
